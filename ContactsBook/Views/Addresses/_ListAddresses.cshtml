@model IEnumerable<ContactsBook.Models.Address>

<div class="panel panel-default panel-success">
	<!-- Default panel contents -->
	<div class="panel-heading"><h4>Addresses</h4></div>
	<div class="panel-body">		
		@Html.ActionLink("Add", "Create", "Addresses", new { PersonId = ViewBag.PersonId }, new { @class = "btn btn-primary btn-sm", data_modal = "" })
	</div>

	<!-- Table -->
	<table class="table">
		<tr>
			<th>@Html.DisplayNameFor(model => model.Type.Label)</th>
			<th>@Html.DisplayNameFor(model => model.StreetAddress)</th>
			<th>@Html.DisplayNameFor(model => model.City)</th>
			<th>@Html.DisplayNameFor(model => model.State)</th>
			<th>@Html.DisplayNameFor(model => model.Country)</th>
			<th>@Html.DisplayNameFor(model => model.ZipCode)</th>
			<th>Actions</th>
		</tr>
		@foreach (var address in Model)
			{
			<tr>
				<td>@Html.DisplayFor(item => address.Type.Label)</td>
				<td>@Html.DisplayFor(item => address.StreetAddress)</td>
				<td>@Html.DisplayFor(item => address.City)</td>
				<td>@Html.DisplayFor(item => address.State)</td>
				<td>@Html.DisplayFor(item => address.Country)</td>
				<td>@Html.DisplayFor(item => address.ZipCode)</td>
				<td>
					@Html.ActionLink("Edit", "Edit", "Addresses", new { id = address.Id }, new { @class = "btn btn-warning btn-sm", data_modal = "" })
					- @Html.ActionLink("Delete", "Delete", "Addresses", new { id = address.Id }, new { @class = "btn btn-danger btn-sm", data_modal = "" })
				</td>
			</tr>
			}

	</table>
</div>
<script src="~/Scripts/modalform.js"></script>

